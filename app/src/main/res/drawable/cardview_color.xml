<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <gradient

                android:startColor="#D96AC2"
                android:endColor="#7569ED"
                android:angle="0" />

            <corners
                android:radius="4dp" />

            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />


        </shape>
    </item>


    <item>
        <shape>
            <gradient

                android:endColor="#E021E6"
                android:centerColor="#7367F6"
                android:startColor="#7B75B3"
                android:angle="45" />


            <corners
                android:radius="4dp" />

            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />

        </shape>
    </item>




</selector>