<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".ProfileFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutHead"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"

                android:clickable="true" />

            <EditText
                android:id="@+id/edit_text_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:enabled="true"
                            android:maxLines="1"
                android:hint="Enter Name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/black"
                tools:text="Vrushabh Dhond" />

            <ProgressBar
                android:id="@+id/progressbar_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_below="@id/layoutHead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="16dp"
                android:hint="Enter your email"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp"
                tools:text="" />

            <TextView
                android:id="@+id/text_not_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="9dp"
                android:text="Not Verified (Click to Verify)"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/holo_red_dark" />
            <TextView
                android:id="@+id/emailverified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="2dp"
                android:text="Verified"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/holo_green_dark" />


            <TextView
                android:id="@+id/text_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
               android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="16dp"
                android:enabled="true"
                android:hint="Phone Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/phone_not_verified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="9dp"
                android:text="Not Verified"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/holo_red_dark" />
            <TextView
                android:id="@+id/phoneverified"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="9dp"
                android:text="Verified"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/holo_green_dark" />


<!--            <TextView-->
<!--                android:id="@+id/text_password"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="top"-->
<!--                android:layout_marginBottom="20dp"-->
<!--                android:drawableLeft="@drawable/ic_point"-->
<!--                android:drawablePadding="16dp"-->
<!--                android:enabled="true"-->
<!--                android:text="Change Password"-->
<!--                android:textAppearance="@style/TextAppearance.AppCompat.Headline"-->
<!--                android:textSize="22sp" />-->


            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:visibility="invisible" />


<TextView
    android:id="@+id/uniqueid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold|italic"
    android:textSize="16sp"
    android:textAllCaps="true"
    android:textColor="@color/green"
    android:layout_gravity="center_horizontal"
    />




            <Button
                android:id="@+id/button_save"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_back"
                android:text="Save Changes"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

<!--<Button-->
<!--    android:id="@+id/uidbtn"-->
<!--    android:layout_width="140dp"-->
<!--    android:layout_height="wrap_content"-->
<!--    android:layout_gravity="center_horizontal"-->
<!--    android:layout_marginTop="15dp"-->
<!--    android:background="@drawable/btn_back_unique"-->
<!--    android:text="Unique ID"-->
<!--    android:textStyle="bold"-->
<!--    android:textAllCaps="true"-->


<!--    android:textColor="@android:color/white" />-->



            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fablinkedin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:visibility="invisible"
                    android:tint="@android:color/white"
                    app:fabSize="normal"
                    android:layout_marginBottom="260dp"
                    android:backgroundTint="#0073B1"
                    app:srcCompat="@drawable/linkedinlogo" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabinsta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                 android:visibility="invisible"
                android:tint="@android:color/white"
                app:fabSize="normal"
                android:layout_marginBottom="180dp"
                android:backgroundTint="#D23B6F"
                app:srcCompat="@drawable/instagramlogo" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                app:fabSize="normal"
                android:id="@+id/fabfb"
                android:visibility="invisible"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="100dp"
                 android:backgroundTint="#1877F2"
                app:srcCompat="@drawable/facebooklogo"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:tint="@android:color/white"
                android:backgroundTint="@color/green"
                android:layout_marginBottom="16dp"
                app:fabSize="normal"
                app:srcCompat="@android:drawable/ic_input_add" />






            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
</FrameLayout>